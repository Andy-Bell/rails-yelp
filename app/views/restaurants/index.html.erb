<% if can? :create, Restaurant %>
<%= link_to "Add restaurant", new_restaurant_path, id: 'add_restaurant' %>
<% end %>

<ul>
  <% @restaurants.each do |restaurant|%>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <%= restaurant.description %>
    </li>
  <% end %>
</ul>
